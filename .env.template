# 网址监控系统 - 环境变量配置模板
# 复制此文件为 .env 并修改相应配置

# ==================== 数据库配置 ====================
# MySQL root用户密码（请使用强密码）
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here

# 应用数据库密码（请使用强密码）
MYSQL_PASSWORD=your_mysql_app_password_here

# ==================== 缓存配置 ====================
# Redis访问密码（请使用强密码）
REDIS_PASSWORD=your_redis_password_here

# ==================== 应用配置 ====================
# Flask应用密钥（32位随机字符串）
SECRET_KEY=your_32_character_secret_key_here

# 应用域名（用于CORS和URL生成）
DOMAIN=localhost

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==================== 系统配置 ====================
# 时区设置
TZ=Asia/Shanghai

# ==================== 备份配置 ====================
# 是否启用自动备份
BACKUP_ENABLED=true

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# ==================== 邮件配置 ====================
# SMTP服务器配置（可选）
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ==================== 安全配置 ====================
# 是否启用HTTPS重定向
FORCE_HTTPS=false

# 允许的主机列表（逗号分隔）
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== 性能配置 ====================
# 工作进程数量（建议设置为CPU核心数）
WORKERS=2

# 每个进程的线程数
THREADS=4

# 请求超时时间（秒）
TIMEOUT=30
