# 网址监控系统 - 环境变量配置模板
# 复制此文件为 .env 并填写实际值

# =============================================================================
# 数据库配置
# =============================================================================

# MySQL root用户密码
DB_ROOT_PASSWORD=your_root_password_here

# MySQL应用用户密码
DB_PASSWORD=your_db_password_here

# 数据库连接URL (如果使用外部数据库)
# DATABASE_URL=mysql://monitor_user:password@localhost:3306/website_monitor

# =============================================================================
# Redis配置
# =============================================================================

# Redis密码
REDIS_PASSWORD=your_redis_password_here

# Redis连接URL (如果使用外部Redis)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# 应用安全配置
# =============================================================================

# Flask密钥 (至少32位随机字符串)
SECRET_KEY=your_secret_key_here_min_32_chars

# JWT密钥 (至少32位随机字符串)
JWT_SECRET_KEY=your_jwt_secret_here_min_32_chars

# =============================================================================
# 邮件服务配置
# =============================================================================

# SMTP服务器
MAIL_SERVER=smtp.qq.com

# SMTP端口
MAIL_PORT=587

# 是否使用TLS
MAIL_USE_TLS=true

# 邮箱账号
MAIL_USERNAME=your_email@qq.com

# 邮箱密码/应用密码
MAIL_PASSWORD=your_email_app_password

# 发件人显示名称
MAIL_DEFAULT_SENDER=网址监控系统 <your_email@qq.com>

# =============================================================================
# 部署配置
# =============================================================================

# 生产服务器IP
DEPLOY_HOST=your_server_ip

# 服务器用户名
DEPLOY_USERNAME=root

# SSH端口
DEPLOY_PORT=22

# 域名配置
DOMAIN_NAME=your-domain.com

# =============================================================================
# 应用配置
# =============================================================================

# 运行环境
FLASK_ENV=production

# 日志级别
LOG_LEVEL=INFO

# 时区
TZ=Asia/Shanghai

# 最大文件上传大小 (MB)
MAX_CONTENT_LENGTH=50

# =============================================================================
# 监控配置
# =============================================================================

# 默认检测间隔 (秒)
DEFAULT_CHECK_INTERVAL=300

# 最大并发检测数
MAX_CONCURRENT_CHECKS=50

# 超时时间 (秒)
REQUEST_TIMEOUT=30

# =============================================================================
# 缓存配置
# =============================================================================

# 缓存类型 (redis/memory)
CACHE_TYPE=redis

# 缓存默认超时时间 (秒)
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# 文件存储配置
# =============================================================================

# 上传文件存储路径
UPLOAD_FOLDER=uploads

# 下载文件存储路径
DOWNLOAD_FOLDER=downloads

# 允许的文件扩展名
ALLOWED_EXTENSIONS=csv,txt,json,xlsx

# =============================================================================
# API配置
# =============================================================================

# API速率限制
API_RATE_LIMIT=100/hour

# API版本
API_VERSION=v1

# =============================================================================
# SSL配置
# =============================================================================

# SSL证书路径
SSL_CERT_PATH=/etc/ssl/certs/your-domain.com.crt

# SSL私钥路径
SSL_KEY_PATH=/etc/ssl/private/your-domain.com.key

# =============================================================================
# 备份配置
# =============================================================================

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# 自动备份时间 (格式: HH:MM)
BACKUP_TIME=02:00

# =============================================================================
# 性能配置
# =============================================================================

# 数据库连接池大小
DB_POOL_SIZE=20

# 数据库连接池溢出大小
DB_POOL_OVERFLOW=0

# 数据库连接回收时间 (秒)
DB_POOL_RECYCLE=3600

# =============================================================================
# 开发配置 (仅开发环境)
# =============================================================================

# 是否启用调试模式
DEBUG=false

# 是否启用自动重载
AUTO_RELOAD=false

# 开发服务器端口
DEV_PORT=5000

# =============================================================================
# 第三方服务配置 (可选)
# =============================================================================

# 钉钉机器人Webhook (可选)
# DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your_token

# 企业微信机器人Webhook (可选)
# WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key

# Slack Webhook (可选)
# SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# =============================================================================
# 生成配置提示
# =============================================================================

# 生成安全密钥的方法:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

# 生成UUID的方法:
# python -c "import uuid; print(str(uuid.uuid4()))"

