# 网址监控系统 - 生产环境配置模板
# 复制此文件为 .env.production 并修改相应配置

# ==================== 数据库配置 ====================
# MySQL root用户密码（请使用强密码，至少16位）
MYSQL_ROOT_PASSWORD=your_very_strong_mysql_root_password_here

# 应用数据库密码（请使用强密码，至少16位）
MYSQL_PASSWORD=your_very_strong_mysql_app_password_here

# ==================== 缓存配置 ====================
# Redis访问密码（请使用强密码，至少16位）
REDIS_PASSWORD=your_very_strong_redis_password_here

# ==================== 应用配置 ====================
# Flask应用密钥（32位随机字符串，用于会话加密）
SECRET_KEY=your_32_character_secret_key_for_production

# 应用域名（修改为您的实际域名）
DOMAIN=your-domain.com

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==================== 端口配置 ====================
# 生产环境端口配置（避免与系统服务冲突）
MYSQL_PORT=33306
REDIS_PORT=36379
BACKEND_PORT=35001
FRONTEND_PORT=38080
FRONTEND_HTTPS_PORT=38443

# ==================== 性能配置 ====================
# 工作进程数量（建议设置为CPU核心数）
WORKERS=2

# 每个进程的线程数
THREADS=4

# 请求超时时间（秒）
TIMEOUT=30

# ==================== 系统配置 ====================
# 时区设置
TZ=Asia/Shanghai

# ==================== 安全配置 ====================
# 是否启用HTTPS重定向
FORCE_HTTPS=false

# 允许的主机列表（逗号分隔，包含您的域名）
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ==================== 监控配置 ====================
# 监控任务并发数
MAX_CONCURRENT_TASKS=10

# 监控间隔（分钟）
DEFAULT_MONITOR_INTERVAL=5

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# ==================== 备份配置 ====================
# 是否启用自动备份
BACKUP_ENABLED=true

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# 备份存储路径
BACKUP_PATH=/app/backups

# ==================== 邮件配置 ====================
# SMTP服务器配置（可选）
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=

# ==================== 第三方集成 ====================
# Dify API配置（可选）
DIFY_API_URL=
DIFY_API_KEY=

# ==================== 高级配置 ====================
# 数据库连接池配置
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis连接池配置
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30

# 文件上传限制（MB）
MAX_UPLOAD_SIZE=100

# 日志文件大小限制（MB）
LOG_FILE_MAX_SIZE=50

# 日志文件保留数量
LOG_FILE_BACKUP_COUNT=5
