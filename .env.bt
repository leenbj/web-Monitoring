# 宝塔面板环境专用配置文件
# 请根据您的实际情况修改以下配置

# MySQL数据库配置
MYSQL_ROOT_PASSWORD=BT_MySQL_Root_Password_2024!
MYSQL_PASSWORD=BT_Monitor_App_Password_2024!

# Redis配置（新增Redis密码保护）
REDIS_PASSWORD=BT_Redis_Password_2024!

# Flask应用配置（32位随机密钥）
SECRET_KEY=BT_Flask_Secret_Key_32_Characters_2024

# 域名配置（替换为您的实际域名）
DOMAIN=your-domain.com

# 应用配置
LOG_LEVEL=INFO
TZ=Asia/Shanghai

# 宝塔面板特定配置
# 如果您的宝塔面板运行在特定端口，请相应调整
BT_PANEL_PORT=8888

# 数据库备份配置（可选）
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7