# 网址监控系统 - 生产环境配置
# 复制此文件为 .env 进行生产部署

# ==================== 数据库配置 ====================
# MySQL root用户密码（强密码）
MYSQL_ROOT_PASSWORD=StrongRootPass123!

# 应用数据库密码（强密码）
MYSQL_PASSWORD=MonitorPass123!

# ==================== 缓存配置 ====================
# Redis访问密码（强密码）
REDIS_PASSWORD=RedisPass123!

# ==================== 应用配置 ====================
# Flask应用密钥（32位随机字符串，生产环境请更改）
SECRET_KEY=your-32-character-secret-key-here-change-this

# 应用域名（用于CORS和URL生成）
DOMAIN=localhost

# 日志级别
LOG_LEVEL=INFO

# ==================== 系统配置 ====================
# 时区设置
TZ=Asia/Shanghai

# ==================== 性能配置 ====================
# 工作进程数量（建议设置为CPU核心数）
WORKERS=2

# 每个进程的线程数
THREADS=4

# 请求超时时间（秒）
TIMEOUT=30

# ==================== 宝塔部署配置 ====================
# 宝塔面板Docker端口映射
FRONTEND_PORT=10080
BACKEND_PORT=15000
MYSQL_PORT=13306
REDIS_PORT=16379

# 宝塔面板域名绑定（可选）
# BT_DOMAIN=your-domain.com