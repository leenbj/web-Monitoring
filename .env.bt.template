# 网址监控系统 - 宝塔面板专用环境变量配置模板
# 复制此文件为 .env.bt 并修改相应配置

# ==================== 数据库配置 ====================
# MySQL root用户密码（请使用强密码）
MYSQL_ROOT_PASSWORD=bt_mysql_root_password_2024

# 应用数据库密码（请使用强密码）
MYSQL_PASSWORD=bt_monitor_password_2024

# ==================== 缓存配置 ====================
# Redis访问密码（请使用强密码）
REDIS_PASSWORD=bt_redis_password_2024

# ==================== 应用配置 ====================
# Flask应用密钥（32位随机字符串）
SECRET_KEY=bt_your_32_character_secret_key_here

# 应用域名（修改为您的实际域名）
DOMAIN=w3.799n.com

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==================== 宝塔专用端口配置 ====================
# 这些端口避免与宝塔面板现有服务冲突
# MySQL端口: 13306 (外部) -> 3306 (内部)
# Redis端口: 16379 (外部) -> 6379 (内部)
# 后端API端口: 15001 (外部) -> 5000 (内部)
# 前端HTTP端口: 18080 (外部) -> 80 (内部)
# 前端HTTPS端口: 18443 (外部) -> 443 (内部)

# ==================== 系统配置 ====================
# 时区设置
TZ=Asia/Shanghai

# ==================== 宝塔面板集成配置 ====================
# 是否启用宝塔面板反向代理
BT_PROXY_ENABLED=true

# 宝塔面板网站根目录
BT_WWWROOT=/www/wwwroot

# ==================== 备份配置 ====================
# 是否启用自动备份
BACKUP_ENABLED=true

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# 备份存储路径（宝塔面板备份目录）
BACKUP_PATH=/www/backup/website-monitor

# ==================== 邮件配置 ====================
# SMTP服务器配置（可选）
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ==================== 安全配置 ====================
# 是否启用HTTPS重定向
FORCE_HTTPS=false

# 允许的主机列表（包含您的域名）
ALLOWED_HOSTS=localhost,127.0.0.1,w3.799n.com,w4.799n.com

# ==================== 性能配置 ====================
# 工作进程数量（建议设置为CPU核心数）
WORKERS=2

# 每个进程的线程数
THREADS=4

# 请求超时时间（秒）
TIMEOUT=30

# ==================== 监控配置 ====================
# 监控任务并发数
MAX_CONCURRENT_TASKS=10

# 监控间隔（分钟）
DEFAULT_MONITOR_INTERVAL=5

# 请求超时时间（秒）
REQUEST_TIMEOUT=30
