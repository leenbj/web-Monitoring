# 网址监控系统 - 环境配置文件模板
# 复制此文件为 .env 并修改相应配置

# ===========================================
# 基础配置
# ===========================================

# 应用环境 (development/production/testing)
FLASK_ENV=production

# 应用密钥 (生产环境必须修改)
SECRET_KEY=WebMonitorSecretKey2024ChangeMeInProduction

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 时区
TZ=Asia/Shanghai

# 域名配置
DOMAIN=localhost

# ===========================================
# 数据库配置
# ===========================================

# MySQL配置
MYSQL_ROOT_PASSWORD=WebMonitor2024!
MYSQL_PASSWORD=MonitorUser2024!
MYSQL_PORT=3306

# 数据库URL (自动生成，通常不需要修改)
# DATABASE_URL=mysql+pymysql://monitor_user:${MYSQL_PASSWORD}@mysql:3306/website_monitor?charset=utf8mb4

# ===========================================
# Redis配置
# ===========================================

REDIS_PASSWORD=RedisCache2024!
REDIS_PORT=6379

# Redis URL (自动生成，通常不需要修改)
# REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ===========================================
# 服务端口配置
# ===========================================

# 后端API端口
BACKEND_PORT=5000

# 前端Web端口
FRONTEND_PORT=80

# 前端SSL端口
FRONTEND_SSL_PORT=443

# ===========================================
# 邮件配置 (可选)
# ===========================================

# 邮件服务器配置
MAIL_SERVER=smtp.qq.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# 邮件账户 (发送通知邮件用)
MAIL_USERNAME=your-email@qq.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@qq.com

# ===========================================
# 网络配置
# ===========================================

# Docker网络配置
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1

# 数据存储目录
DATA_DIR=./data

# ===========================================
# API配置
# ===========================================

# API基础URL
API_BASE_URL=http://localhost:5000

# ===========================================
# 安全配置
# ===========================================

# JWT配置
JWT_SECRET_KEY=${SECRET_KEY}
JWT_ACCESS_TOKEN_EXPIRES=3600

# 会话配置
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ===========================================
# 监控配置
# ===========================================

# 检测配置
DETECTION_TIMEOUT=30
DETECTION_RETRY_TIMES=3
DETECTION_MAX_CONCURRENT=20

# 数据保留配置
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# ===========================================
# 开发配置 (仅开发环境)
# ===========================================

# 开发环境数据库
# DEV_DATABASE_URL=sqlite:///./database/website_monitor.db

# 调试模式
DEBUG=False

# SQL调试
SQLALCHEMY_ECHO=False
